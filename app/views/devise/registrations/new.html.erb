<body>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<div class="navi">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h3 class="my-0 mr-md-auto font-weight-high">X-Solar Tech Clientes</h3>
    <nav class="my-2 my-md-0 mr-md-3">
      <a style="padding-right: 20px" <%=link_to "Home", wilkommen_path, method: :get, class: "btn btn-outline-primary"  %></a>
      <a style="padding-right: 20px"<%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn btn-outline-primary" %></a>
      <a style="padding-right: 20px"><%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary" %></a>
    </nav>
  </div>
</div><br>


<div class="card">
  <h2 style="font-size: xx-large">Registrar</h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=> '40', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Senha' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres ou mais )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "Nova Senha", :size=> '40', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar Senha' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "Confirmar Senha", :size=> '40', class: 'form-control' %>
    </div><br>

    <div class="actions">
      <%= f.submit "Registrar", class: 'btn btn-lg btn-outline-primary' %>
    </div><br><br>
  <% end %>

</div><br><br><br>
</body>




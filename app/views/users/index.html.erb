<body>
<div class="navi">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h3 class="my-0 mr-md-auto font-weight-high">X-Solar Tech Clientes</h3>
    <nav class="my-2 my-md-0 mr-md-3">
      <a style="padding-right: 20px" <%=link_to "Home", wilkommen_path, method: :get, class: "btn btn-outline-primary"  %></a>
      <a style="padding-right: 20px"><%=link_to "Logout", destroy_admin_session_path, method: :delete, class: "btn btn-outline-primary"%></a>
    </nav>
  </div>
</div><br>

<div class="card2">
  <h2 style="font-size: xx-large">Clientes</h2><br>

  <p><%= link_to 'Novo Cliente', new_user_path, class: "btn btn-outline-primary" %></p><br>


  <table>
    <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.cpd %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.zip %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= link_to 'Mostrar', user, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Excluir', user, class: "btn btn-outline-primary btn-sm", method: :delete, data: { confirm: 'Voce deseja realmente excluir o registro?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div><br>
</body>

